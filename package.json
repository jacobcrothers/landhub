{
  "name": "angular-full-sample",
  "version": "1.0.0",
  "license": "MIT",
  "description": "Full sample application built with Angular 4 that follows all best practices",
  "repository": {
    "url": "https://github.com/yduartep/angular-full-sample"
  },
  "keywords": [
    "angular-cli",
    "angular"
  ],
  "author": "Yahima Duarte <layahi@gmail.com>",
  "private": true,
  "scripts": {
    "ng": "ng",
    "build": "ng build",
    "build:prod": "ng build --aot=false --target=production",
    "test": "ng test",
    "pretest": "npm run lint",
    "e2e": "ng e2e",
    "lint": "ng lint",

    "documentation:gentoc": "doctoc README.md",

    "start": "concurrent --kill-others --kill-others-on-fail --prefix \"[{time}-{name}]\" --names \"MOCKS,APPLICATION\" -c \"blue.bold,magenta\" \"npm run start:mocks\" \"npm run start:application\"",
    "start:mocks": "json-server prototype/apiMocks.js --routes prototype/routes.json",
    "start:application": "ng serve --environment=mock --open true --live-reload true"
  },
  "dependencies": {
    "@angular/common": "^4.0.0",
    "@angular/compiler": "^4.0.0",
    "@angular/core": "^4.0.0",
    "@angular/forms": "^4.0.0",
    "@angular/http": "^4.0.0",
    "@angular/platform-browser": "^4.0.0",
    "@angular/platform-browser-dynamic": "^4.0.0",
    "@angular/router": "^4.0.0",
    "@ngx-translate/core": "^6.0.1",
    "@ngx-translate/http-loader": "0.0.3",
    "angular-in-memory-web-api": "^0.3.2",
    "angular2-datatable": "^0.6.0",
    "bootstrap": "^3.3.7",
    "core-js": "^2.4.1",
    "font-awesome": "^4.7.0",
    "ngx-bootstrap": "^1.6.6",
    "rxjs": "^5.1.0",
    "zone.js": "^0.8.4"
  },
  "devDependencies": {
    "@angular/cli": "1.0.1",
    "@angular/compiler-cli": "^4.0.0",
    "@types/jasmine": "2.5.38",
    "@types/node": "~6.0.60",
    "codelyzer": "~2.0.0",
    "concurrently": "^3.4.0",
    "doctoc": "^1.3.0",
    "faker": "^4.1.0",
    "jasmine-core": "~2.5.2",
    "jasmine-spec-reporter": "~3.2.0",
    "json-server": "^0.9.5",
    "karma": "~1.4.1",
    "karma-chrome-launcher": "~2.0.0",
    "karma-cli": "~1.0.1",
    "karma-coverage-istanbul-reporter": "^0.2.0",
    "karma-jasmine": "~1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "npm-run-all": "^4.0.2",
    "protractor": "~5.1.0",
    "ts-node": "~2.0.0",
    "tslint": "~4.5.0",
    "typescript": "~2.2.0"
  },
  "engines": {
    "node": ">=6.1.0"
  }
}
